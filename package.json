{
  "name": "shreenathji-app",
  "version": "1.0.2",
  "main": "server/index.js",
  "description": "GlobalReach Exporter Lead Automator - AI-powered CRM",
  "scripts": {
    "start": "node server/index.js",
    "dev": "vite",
    "build:react": "set NODE_OPTIONS=--max-old-space-size=4096 && vite build",
    "build:web": "set NODE_OPTIONS=--max-old-space-size=4096 && cross-env BUILD_OUT_DIR=build vite build",
    "build:pages": "set NODE_OPTIONS=--max-old-space-size=4096 && cross-env BUILD_OUT_DIR=cloudflare-pages/dist vite build && xcopy /E /I /Y cloudflare-pages\\_redirects cloudflare-pages\\dist\\_redirects && xcopy /E /I /Y cloudflare-pages\\functions cloudflare-pages\\dist\\functions",
    "preview": "vite preview",
    "build": "electron-builder",
    "build:installer": "node scripts/build-installer.js",
    "version:patch": "npm version patch && git push && git push --tags",
    "version:minor": "npm version minor && git push && git push --tags",
    "version:major": "npm version major && git push && git push --tags",
    "deploy": "npm run build:react && git add . && git commit -m 'chore: build update' && git push",
    "deploy:pages": "npm run build:pages && wrangler pages deploy cloudflare-pages/dist --project-name=shreenathji-app",
    "migrate:parse": "node scripts/migrate-to-parse.js",
    "cap:sync": "cap sync",
    "cap:copy": "cap copy",
    "cap:update": "cap update",
    "cap:add:android": "cap add android",
    "cap:add:ios": "cap add ios",
    "cap:open:android": "cap open android",
    "cap:open:ios": "cap open ios",
    "build:android": "npm run build:react && cap sync && cap copy android",
    "build:ios": "npm run build:react && cap sync && cap copy ios"
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@ngrok/ngrok": "^1.6.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/qrcode": "^1.5.6",
    "acme-client": "^5.4.0",
    "basic-auth": "^2.0.1",
    "compression": "^1.7.4",
    "crypto-js": "^4.2.0",
    "csurf": "^1.11.0",
    "electron-updater": "^6.1.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "fast-xml-parser": "^5.3.2",
    "googleapis": "^166.0.0",
    "helmet": "^8.1.0",
    "imap": "^0.8.19",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.554.0",
    "mailparser": "^3.6.5",
    "nodemailer": "^7.0.10",
    "otplib": "^12.0.1",
    "papaparse": "^5.5.3",
    "parse": "^3.5.1",
    "qrcode": "^1.5.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.5.0",
    "systeminformation": "^5.21.20",
    "whatsapp-web.js": "^1.23.0",
    "winston": "^3.11.0",
    "xlsx": "^0.18.5",
    "@capacitor/app": "^6.0.2",
    "@capacitor/haptics": "^6.0.1",
    "@capacitor/keyboard": "^6.0.1",
    "@capacitor/status-bar": "^6.0.1",
    "@capacitor/splash-screen": "^6.0.1"
  },
  "devDependencies": {
    "@capacitor/android": "^6.1.2",
    "@capacitor/cli": "^6.1.2",
    "@capacitor/core": "^6.1.2",
    "@capacitor/ios": "^6.1.2",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/crypto-js": "^4.2.2",
    "@types/imap": "^0.8.40",
    "@types/nodemailer": "^7.0.4",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "cross-env": "^7.0.3",
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12",
    "electron-store": "^11.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.2.2",
    "vite": "^5.4.21"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
