# Server
NODE_ENV=production
PORT=8080
WEBSITES_PORT=8080

# Database (Cosmos DB Mongo API)
MONGO_URI=mongodb://user:password@host:10255/appdb?ssl=true&retrywrites=false

# Cache / Queues (Azure Cache for Redis)
REDIS_URL=rediss://:password@hostname:6380

# Parse (optional if used)
PARSE_APPLICATION_ID=
PARSE_JAVASCRIPT_KEY=
PARSE_MASTER_KEY=
PARSE_SERVER_URL=https://parseapi.back4app.com/

# AI / Gemini
GEMINI_API_KEY=

# Push notifications (if configured)
PUSH_FCM_SERVER_KEY=
PUSH_FCM_SENDER_ID=

# Feature flags
ENABLE_WEBSOCKET=true
ENABLE_SCHEDULED_JOBS=false
ENABLE_AI_WORKERS=true
ENABLE_AUTO_WORKER_DEPLOY=false

# Azure Free Tier Optimization
# Set to true if running on Azure Free tier (F1) to reduce resource usage
AZURE_FREE_TIER=false
# Memory limit for free tier (165MB total, use 128MB for Node.js)
NODE_OPTIONS=--max-old-space-size=128
# Logging level (warn for production, info for development)
LOG_LEVEL=warn
# Reduce worker concurrency on free tier
WORKER_CONCURRENCY_LOW=false

